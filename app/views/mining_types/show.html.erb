<div class="row" style="justify-content: center">
  <div class="col-sm" style="max-width: 600px;">
    <p id="notice"><%= notice %></p>
    <form>
      <div class="mb-3">
        <%= label_tag nil, @mining_type.class.human_attribute_name(:description) %>
        <%= text_field_tag nil, @mining_type.description, class: "form-control", disabled: true %>
      </div>
      <div class="mb-3">
        <%= label_tag nil, @mining_type.class.human_attribute_name(:acronym) %>
        <%= text_field_tag nil, @mining_type.acronym, class: "form-control", disabled: true %>
      </div>
    </form>

    <%= link_to t('links.edit'), edit_mining_type_path(@mining_type) %> |
    <%= link_to t('links.back'), mining_types_path %>
  </div>
</div>
